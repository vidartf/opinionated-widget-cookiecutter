include LICENSE.txt
include README.md
include pyproject.toml

include setupbase.py
include pytest.ini
include .coveragerc

# Documentation
graft docs
exclude docs/\#*
prune docs/build
prune docs/gh-pages
prune docs/dist

# Examples
graft examples

# Javascript files
graft {{ cookiecutter.python_package_name }}/nbextension
graft ts
prune **/node_modules
prune ts/coverage
prune ts/lib

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
